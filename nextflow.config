manifest {
    mainScript = 'main.nf'
}

// default parameters
params {
    api_key = ''
    cores = '8'    
    fork_max = 2
    help = false
    memory = '12'
      
    // input
    input = ''
    assembly_nrs = ''
    biosample_nrs = ''
    
    // folder structure
    output = 'NCBI_results'

}

profiles {
    local {
        workDir = "work/nextflow-genometojson-$USER"
        includeConfig 'configs/local.config'
        executor {
            name = "local"
            cpus = params.cores
            memory = params.memory
        }

        process.errorStrategy = { task.exitStatus in [10,14,143,137,104,134,139] ? 'retry' : 'terminate' }
    }


    docker {
        docker { enabled = true }
        includeConfig 'configs/container.config'
    }
}